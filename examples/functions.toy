// Function examples in Toy

// Simple function
fn greet(name) {
    print("Hello,", name);
}

greet("Alice");
greet("Bob");

// Function with return value
fn add(a, b) {
    return a + b;
}

let result = add(5, 3);
print("5 + 3 =", result);

// Function that returns early
fn absolute(x) {
    if (x < 0) {
        return -x;
    }
    return x;
}

print("absolute(-10) =", absolute(-10));
print("absolute(7) =", absolute(7));
